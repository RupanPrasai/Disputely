{
  "manifest_version": 3,
  "name": "Disputely",
  "version": "0.0.0",
  "description": "Automated Dispute Assistant",
  "permissions": [
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background/index.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content/index.js"
      ],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "ui/main.js",
        "ui/*"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}
